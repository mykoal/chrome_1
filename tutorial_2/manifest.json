{
    "manifest_version": 3,
    "name": "Reading time",
    "version": "1.0",
    "description": "Add the reading time to Chrome Extension documentation articles",
    "icons": {
        "16": "images_2/icon-16.png",
        "32": "images_2/icon-32.png",
        "48": "images_2/icon-48.png",
        "128": "images_2/icon-128.png"
    },
    "content_scripts": [
        {
            "js": [
                "scripts_2/content.js"
            ],
            "matches": [
                "https://developer.chrome.com/docs/extensions/*",
                "https://developer.chrome.com/docs/webstore/*"
            ]
        }
    ]
}